<Window x:Class="A_Level_Project__New_.ViewHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A_Level_Project__New_"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        Title="View History" Height="700" Width="1000">
    <Canvas Name="myCanvas">
        <Label Name="InputLbl" Content="Input a name to search for:" Canvas.Left="17" Canvas.Top="36"></Label>
        <TextBox Name="InputNameTxtBox" Width="180" Canvas.Left="185" Canvas.Top="37" Height="25"></TextBox>
        <Button Name="SearchBtn" Content="Search" Height="25" Width="60" Canvas.Right="20" Canvas.Top="20" Click="SearchBtn_Click"></Button>
        <CheckBox Name="LowercaseCheckBox" Canvas.Left="400" Canvas.Top="25"></CheckBox>
        <Label Name="LowercaseLbl" Content="Include Lowercase" Canvas.Left="420" Canvas.Top="19"></Label>
        <CheckBox Name="UppercaseCheckBox" Canvas.Left="400" Canvas.Top="57"></CheckBox>
        <Label Name="UppercaseLbl" Content="Include Uppercase" Canvas.Left="420" Canvas.Top="50"></Label>
    </Canvas>
</Window>
