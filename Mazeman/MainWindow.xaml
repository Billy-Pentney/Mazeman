<Window x:Class="Mazeman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Main Menu" Height="300" Width="350">
    <Canvas Name="MainCanvas">
        <Button Name="NewGameBtn" Content="PLAY GAME" FontSize="24" Height="80" Width="200" Canvas.Left="70" Canvas.Top="45" Click="NewGameBtn_Click"></Button>
        <Button Name="ViewHistoryBtn" Content="View Previous Scores" Canvas.Left="85" Canvas.Top="140" Height="60" Width="170" Click="ViewHistoryBtn_Click"></Button>
        <Button Name="SwapColoursBtn" Content="Switch Colours" FontSize="8" Width ="60" HorizontalAlignment="Center" Click="SwapColoursBtn_Click" Canvas.Top="210" Canvas.Left="140"></Button>

        <Label Name="IdentifierLbl" Content="Billy Pentney" FontSize="8" Opacity="0.5" Canvas.Bottom="0" Margin="5"/>
        <Label Name="VersionNumLbl" Content="V.2.2.0" Canvas.Right="0" Canvas.Bottom="0" FontSize="9" Opacity="0.5" Margin="5"></Label>
    </Canvas>
</Window>
