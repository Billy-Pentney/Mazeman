<Window x:Class="A_Level_Project__New_.NamePlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A_Level_Project__New_"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="NamePlayers" Height="120" Width="250">
    <Canvas Name="myCanvas">
        <TextBlock Name="ExplainTxt" Text="Input a name for player 1" Canvas.Left="10" Canvas.Top="20"></TextBlock>
        <Button Name="DoneBtn" Content="Done" Canvas.Right="10" Canvas.Bottom="10" Width="40" Height="25" Click="DoneBtn_Click"></Button>
    </Canvas>
</Window>
